@model SynapseStudioWeb.Models.ListNamespaceModel
@{
    ViewData["Title"] = "Synapse Studio";
}

<div class="row">
    <div class="col-md-12">
        <h4>List Namespaces</h4>
    </div>
</div> 
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fa fa-database"></i>&nbsp;List Namespaces</h5>
            </div>
            <div class="card-body p-2">
                <div class="row">
                    <div class="col-md-12">
                        <h4>New List Namespace</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form asp-controller="List" asp-action="ListNamespaceSave"
                              data-ajax-failure="onListNamespaceFailed" data-ajax-success="onListNamespaceSuccess"
                              data-ajax="true" data-ajax-method="POST">
                            <label for="ListNamespace">*Please enter a name for the new list namespace</label>
                            @Html.TextBoxFor(m => m.ListNamespace, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ListNamespace)
                            <br />
                            <label for="ListNamespaceDescription">Enter a description for the new list namespace</label>
                            @Html.TextBoxFor(m => m.ListNamespaceDescription, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ListNamespaceDescription)
                            <br />
                            <a href="../List/ListManagerList" class="btn btn-sm btn-success pull-left">Back</a>
                            <input type="submit" class="btn btn-sm btn-primary pull-right" id="btn-submit" value="Submit" />
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12" id="ListNamespaceList">
                        <table class="table" width="100%">
                            <thead>
                                <tr>
                                    <th>List Namespace</th>
                                     
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var m in Model.ListNamespaceDto)
                                {
                                    <tr>
                                        <td>@m.listnamespace</td>
                                         
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/js/listmanager.js"></script>
