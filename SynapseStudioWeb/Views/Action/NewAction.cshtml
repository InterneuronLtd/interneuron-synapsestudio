@model SynapseStudioWeb.Models.ActionModel

@{
    ViewData["Title"] = "NewAction";
}

<div class="row">
    <div class="col-lg-12">
        @if (Model is null)
        {
            <h4>New Action</h4>
        }
        else
        {
            <h4>Edit Action</h4>
        }
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
