<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fa fa-list"></i>&nbsp;Actions</h5>
            </div>
            <div class="card-body p-2">
                <div class="row">
                    <div class="col-md-12 p-2">
                        <span>@ViewBag.ActionList</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 p-2">
                        <div class="col-md-8">
                        </div>
                        <div class="col-md-4">
                            <a class="btn btn-sm btn-primary float-right" href="~/Action/NewAction">New Action</a>
                        </div>
                    </div>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var m in Model)
                        {
                            <tr>
                                <td>@m.ActionName</td>
                                <td>@m.ActionDescription</td>
                                <td>
                                    <a class="btn btn-sm btn-warning" href=@("Edit?id="+ m.action_id)>Edit</a>
                                    <a class="btn btn-sm btn-danger" href=@("Delete?id=" + m.action_id)>Delete</a>
                                    <a class="btn btn-sm btn-primary" href=@("EntityActionList?id=" + m.action_id)>View Entity Map</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

