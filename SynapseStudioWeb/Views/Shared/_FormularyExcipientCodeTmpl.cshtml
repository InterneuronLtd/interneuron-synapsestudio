@{
    var DeriveId = (Func<string, string>)ViewData["DeriveId"];
    var DeriveAbsUrl = (Func<string, string>)ViewData["DeriveAbsUrl"];
}

<div id="@DeriveId("excipientTmpl")"  style="display:none;">
    <!--Add Excipient Controls -->
    <div class="excipient">
        <div class="form-group row">
            <div class="card col-sm-9 ml-2 mb-2 p-0 bg-light" style="border: 1px dotted;">
                <div class="card-header text-right bg-light p-0 m-0 border-0">
                    <a class="fas fa-times-circle text-danger" style="font-size: 1.2rem;" href="#" onclick="removeExcipientItem(this)"></a>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label for="Ingredient" class="col-sm-3 col-form-label">Ingredient</label>
                        <div class="col-sm-8">
                            <input type="text" name="Ingredient" class="form-control studio-autocomplete" data-singleselect="true" id="@DeriveId("Excipient_Ingredient-{0}")" data-query-url="@DeriveAbsUrl("/Formulary/SearchLatestIngredients")">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Strength" class="col-sm-3 col-form-label">Strength</label>
                        <div class="col-sm-4">
                            <input type="text" name="Strength" class="form-control" id="@DeriveId("Excipient_Strength-{0}")">
                        </div>
                        <div class="col-sm-4">
                            <input type="text" name="StrengthUnit" class="form-control studio-autocomplete" id="@DeriveId("Excipient_StrengthUnit-{0}")" data-singleselect="true" data-query-url="@DeriveAbsUrl("/Formulary/SearchLatestUOMs")">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function removeExcipientItem(item) {
        $(item).closest('.excipient').remove();
    }
</script>