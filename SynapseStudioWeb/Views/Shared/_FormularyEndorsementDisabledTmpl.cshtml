@{
    var DeriveId = (Func<string, string>)ViewData["DeriveId"];
}

<div id="@DeriveId("endorsementDisabledTmpl")" disabled style="display:none;">
    <!--Add Endorsement Controls -->
    <div class="endorsement">
        <div class="form-group row">
            <div class="card col-sm-11 ml-2 mb-2 p-0 bg-light" style="border: 1px dotted;">
                <div class="card-body col-sm-11">
                    <textarea name="Endorsement" class="form-control" id="@DeriveId("txtEndorsement-{0}")" maxlength="255" readonly></textarea>
                </div>
            </div>
        </div>
    </div>
</div>