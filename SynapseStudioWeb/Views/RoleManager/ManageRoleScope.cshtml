
@{
    ViewData["Title"] = "ManageRoleScope";
}

<h2>Manage Role - Scopes</h2>

<div class="well" style="margin-top: 15px;">
    <div class="row">
        <div class="col-md-12">

            <div class="col-lg-3">
                <a class="btn btn-sm btn-primary btn-block" href=@("../ManageRole/" +ViewBag.roleid)>Local Logins</a>
            </div>
            <div class="col-lg-3">
                <a class="btn btn-sm btn-primary btn-block" href="@("../ManageExternalusers/" +ViewBag.roleid)">External Users</a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>New <small>Role</small></h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                @using (Html.BeginForm("MappRoleScope", "RoleManager", FormMethod.Post))
                {
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">
                            Select an API Scope to give permissions on this role <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            @Html.DropDownList("RoleScope", ViewBag.rolescope as SelectList, new { @class = "form-control" })
                        </div>
                        @Html.Hidden("roleid", (object)ViewBag.roleid)
                    </div>



                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3">

                            <button type="submit" class="btn btn-sm btn-success">Add To Role</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div>
    <br />
    <div>
        <div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <h2> API Scopes this Role has permissions to( @ViewBag.ApiScopes.Rows.Count)</h2>
                        <div class="card-body p-2">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>API Scope</th>
                                        <th>Description</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.ApiScopes.Rows)
                                    {
                                        <tr>
                                            <td>@item["Name"]</td>
                                            <td>@item["Description"]</td>
                                            <td>
                                                <a href=@("../RemoveScopeRole?id=" + item["Id"]+"&roleid=" +ViewBag.roleid) style="float:left;color:#2a9fd6">Remove</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
