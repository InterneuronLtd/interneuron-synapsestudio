@model IEnumerable<SynapseStudioWeb.Models.SpecialtyModel>

@{
    ViewData["Title"] = "SpecialtyList";
}

<div class="row">
    <div class="col-md-12">
        <h4>Specialty</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fa fa-list"></i>&nbsp;Specialty</h5>
            </div>
            <div class="card-body p-2">
                <div class="row">
                    <div class="col-md-12 p-2">
                        <span></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 p-2">
                        <div class="col-md-8">
                        </div>
                        <div class="col-md-4">
                            <a class="btn btn-sm btn-primary float-right" href="~/Specialty/NewSpecialty">New Specialty</a>
                        </div>
                    </div>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Specialty Code</th>
                            <th>Specialty Text</th>
                            <th>Status</th>
                            <th>Parent Id</th>
                            <th>Local Specialty Code</th>
                            <th>Local Specialty Text</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var spl in Model)
                        {
                        <tr>
                            <td>@spl.specialtycode</td>
                            <td>@spl.specialtytext</td>
                            <td>@spl.statuscode</td>
                            <td>@spl.parentid</td>
                            <td>@spl.localspecialtycode</td>
                            <td>@spl.localspecialtytext</td>
                            <td>
                                <a class="btn btn-sm btn-warning" href=@("Edit?id="+ spl.specialty_id)>Edit</a>
                                <a class="btn btn-sm btn-danger" href=@("Delete?id=" + spl.specialty_id) onclick="return confirm('Are you sure to remove this record?');">Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>